@tailwind base;
@tailwind components;
@tailwind utilities;

@layer utilities {
  .text-balance {
    text-wrap: balance;
  }
}

/* 
  NGX VITE STYLE - Utility Classes
*/

/* Glassmorphism Card */
.glass-card {
  @apply relative;
  background: rgba(255, 255, 255, 0.03);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  border: 1px solid rgba(255, 255, 255, 0.08); /* Subtle border */
  box-shadow: 
    0 4px 30px rgba(0, 0, 0, 0.5),
    inset 0 0 0 1px rgba(255, 255, 255, 0.05); /* Inner highlight */
  border-radius: 24px;
  overflow: hidden;
}

/* Primary Section Container */
.vite-section {
  @apply relative w-full flex items-center justify-center;
  background-color: #010101; /* Fallback */
}

/* Consistent Padding/Width */
.vite-frame {
  @apply px-6 md:px-12 py-20 max-w-[1400px] mx-auto;
}

/* Top-level Headings */
.vite-h1 {
  @apply font-mono font-bold tracking-tight text-white/90;
  letter-spacing: -0.04em; 
  line-height: 1.1;
}

/* Section Headings */
.vite-h2 {
  @apply font-mono font-bold tracking-tight text-white/90;
  letter-spacing: -0.02em;
}

/* Accent Text (Violet) */
.text-vite {
  color: #b39aff; /* Matches TOKENS.vite */
}

/* Subtle Noise Overlay */
.noise-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 50;
  opacity: 0.03;
  background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
}

/* Glowing Button Effect */
.btn-glow {
  @apply relative overflow-hidden transition-all duration-300;
  border: 1px solid rgba(108, 59, 255, 0.3);
  background: rgba(108, 59, 255, 0.05);
  box-shadow: 0 0 20px rgba(108, 59, 255, 0.1);
}

.btn-glow:hover {
  border-color: rgba(108, 59, 255, 0.8);
  box-shadow: 0 0 30px rgba(108, 59, 255, 0.3);
  transform: translateY(-1px);
}

/* Scan Line Animation (Optional) */
@keyframes scan {
  0% { transform: translateY(-100%); opacity: 0; }
  50% { opacity: 0.5; }
  100% { transform: translateY(100vh); opacity: 0; }
}

.scan-line {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 2px;
  background: linear-gradient(to right, transparent, rgba(108, 59, 255, 0.5), transparent);
  animation: scan 8s linear infinite;
  pointer-events: none;
  z-index: 9999;
}
